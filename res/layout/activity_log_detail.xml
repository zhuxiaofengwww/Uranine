<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:listSelector="@android:color/transparent"
    android:background="@drawable/repeat_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_setting_showaddress_bg"
                android:layout_width="fill_parent"
                android:layout_height="58dip"
                android:background="@drawable/main_item_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_setting_showaddress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="3dip"
                    android:text="Set white list"
                    android:textColor="@color/gray"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/listview_devider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_showaddress_location"
                android:layout_width="fill_parent"
                android:layout_height="58dip"
                android:background="@drawable/main_item_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_setting_showaddress_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="3dip"
                    android:text="Set Black list"
                    android:textColor="@color/gray"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/listview_devider" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>  

</LinearLayout>